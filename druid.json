{
  "type": "kafka",
  "spec": {
    "ioConfig": {
      "type": "kafka",
      "consumerProperties": {
        "bootstrap.servers": "localhost:9094"
      },
      "topic": "transactions",
      "inputFormat": {
        "type": "json"
      },
      "useEarliestOffset": true
    },
    "tuningConfig": {
      "type": "kafka"
    },
    "dataSchema": {
      "dataSource": "transactions",
      "timestampSpec": {
        "column": "transactionDate",
        "format": "iso"
      },
      "dimensionsSpec": {
        "dimensions": [
          "transactionId",
          "customerId",
          "ownerId",
          "channel",
          "deviceType",
          "tpn",
          {
            "type": "double",
            "name": "amount"
          }
        ]
      },
      "granularitySpec": {
        "queryGranularity": "none",
        "rollup": false,
        "segmentGranularity": "all"
      }
    }
  }
}